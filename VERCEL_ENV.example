# Client
VITE_DATABASE_API_URL=https://your-vercel-app.vercel.app

# Server
PORT=3000
CORS_ORIGIN=https://your-frontend-domain.vercel.app
JWT_SECRET=replace_with_strong_secret
NODE_ENV=production
DB_AUTO_INIT=false

# Vercel Postgres (auto-generated when you attach Vercel Postgres)
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
DATABASE_URL=

# Optional: Supabase API vars (if you still need them)
SUPABASE_URL=
SUPABASE_KEY=

# Optional fallback: Supabase direct postgres URL
SUPABASE_DB_URL=

# Pool/SSL tuning
PGSSLMODE=require
PGPOOL_MAX=20
PG_IDLE_TIMEOUT_MS=30000
PG_CONN_TIMEOUT_MS=10000
